<Window x:Class="Ataxx.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ataxx"
        mc:Ignorable="d"
        Title="Result" Height="200" Width="400">
    <Viewbox>
        <Grid Height="100" Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Black: " HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Name="BlackLabel"/>
            <Label Content="White: " HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Name="WhiteLabel"/>
            <Label Content="Result: " HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Name="ResultLabel"/>
        </Grid>
    </Viewbox>
</Window>
